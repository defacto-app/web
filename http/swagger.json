{
  "openapi": "3.0.0",
  "info": {
    "title": "Defacto API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5700"
    },
    {
      "url": "https://api.defactoapp.com.ng"
    }
  ],
  "security": [
    {
      "bearerAuth": [],
      "basicAuth": [],
      "apiKey": [],
      "oauth2": [],
      "openIdConnect": []
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "in": "header",
        "name": "Authorization",
        "description": "Bearer token"
      }
    }
  },
  "paths": {
    "/api/admin/auth/login": {
      "post": {
        "summary": "User login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "kats.com.ng@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful"
          }
        }
      }
    },
    "/api/admin/auth/register": {
      "post": {
        "summary": "User registration",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "admin@gmail.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registration successful"
          }
        }
      }
    },
    "/api/admin/auth/logout": {
      "get": {
        "summary": "Log out a user",
        "responses": {
          "200": {
            "description": "You have been logged out"
          }
        }
      }
    },
    "/api/admin/auth/ping": {
      "get": {
        "summary": "Ping to verify token validity",
        "responses": {
          "200": {
            "description": "Ping successful"
          }
        }
      }
    }
  }
}
